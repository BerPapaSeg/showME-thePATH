{
	"compilerOptions": {
		"module": "Node16", 
		"target": "ES2022",
		"outDir": "dist",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "Node16",
        
        // A MAGIA ACONTECE AQUI:
        "skipLibCheck": true, 
        
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}